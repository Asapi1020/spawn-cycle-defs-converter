{
  "name": "@asp1020/spawn-cycle-converter",
  "version": "1.0.2",
  "description": "A tool to convert spawn cycle data from one format to another.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "uc2txt": "./dist/bin/uc2txt.js",
    "txt2uc": "./dist/bin/txt2uc.js"
  },
  "scripts": {
    "lint": "biome lint",
    "format": "biome format --write",
    "clean": "rimraf dist",
    "build": "run-s build:*",
    "build:tsc": "tsc",
    "build:post": "pnpx tsc-esm-fix dist",
    "debug-uc2txt": "pnpx vite-node src/bin/uc2txt.ts",
    "debug-txt2uc": "pnpx vite-node src/bin/txt2uc.ts"
  },
  "author": "Asapi1020",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@asp1020/type-utils": "^1.0.4",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.18",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  }
}
